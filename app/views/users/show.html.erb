<div class="container">
  
  <p id="notice">
    <%= notice %>
  </p>
  
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      
      <table class="table table-user-show">
        <h1>Books</h1>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpeg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
      
    </div>
  </div>
</div>