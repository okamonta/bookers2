<div class="row">
 <div class="col-md-4 offset-md-4">
  
  <%= render 'books/error', model: @user %>cd 

  <h1>User info</h1>

  <%= form_with model:@user, local:true do |f| %>

    <div class="user-name">Name</div>
      <%= f.text_field :name %>
    
    <div class="user-edit-image">Image</div>
      <%= f.attachment_field :profile_image %>

    <div class="form-body">Introduction</div>
      <%= f.text_area :introduction %><br>

    <div class="update">
      <%= f.submit 'Update User' %>
    </div>

  <% end %>
  
 </div>
</div>