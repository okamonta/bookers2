
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, url:'/books', local:true do |f| %>
      <!--title-->
      <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <!--opinion-->
      <div class="field">
        <h4>Opinion</h4>
        <%= f.text_area :opinion %>
      </div>
      <!--Create Book  New bookを作成-->
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
    